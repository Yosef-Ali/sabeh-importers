# Database
DATABASE_URL="postgresql://username:password@host:5432/sabeh_importers?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl"

# WhatsApp Business API (Optional)
WHATSAPP_API_URL="https://graph.facebook.com/v18.0"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_VERIFY_TOKEN="your-webhook-verify-token"

# Telebirr Integration (Optional)
TELEBIRR_APP_ID="your-telebirr-app-id"
TELEBIRR_APP_KEY="your-telebirr-app-key"
TELEBIRR_SHORT_CODE="your-short-code"
TELEBIRR_PUBLIC_KEY="your-public-key"

# CBE Birr Integration (Optional)
CBE_BIRR_API_KEY="your-cbe-birr-api-key"
CBE_BIRR_MERCHANT_ID="your-merchant-id"

# Cloudflare R2 Object Storage (for listing images)
# Get these from Cloudflare Dashboard → R2 → Manage R2 API Tokens
# Install SDK first: npm install @aws-sdk/client-s3 @aws-sdk/s3-request-presigner
CLOUDFLARE_R2_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_R2_SECRET_KEY="your-r2-secret-access-key"
CLOUDFLARE_R2_BUCKET_NAME="sabeh-media"
# Public URL for the bucket (set custom domain in R2 dashboard or use default)
CLOUDFLARE_R2_PUBLIC_URL="https://pub-XXXXX.r2.dev"

# UploadThing (alternative to R2, already configured)
UPLOADTHING_TOKEN="your-uploadthing-token"

# App Settings
APP_NAME="Sabeh Importers"
APP_NAME_AMHARIC="ሳቤህ ኢምፖርተርስ"
DEFAULT_CURRENCY="ETB"
DEFAULT_LANGUAGE="en"
TAX_RATE="15"
